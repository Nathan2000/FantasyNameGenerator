<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FantasyNameGenerator.WPF.Windows"
        xmlns:vm="clr-namespace:FantasyNameGenerator.WPF.ViewModels.Main"
        xmlns:Converters="clr-namespace:FantasyNameGenerator.WPF.Converters"
        xmlns:common="clr-namespace:FantasyNameGenerator.Lib.Domain.Common;assembly=FantasyNameGenerator.Lib"
        xmlns:res="clr-namespace:FantasyNameGenerator.WPF.Resources"
        x:Class="FantasyNameGenerator.WPF.Windows.MainWindow"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:DesignMainViewModel, IsDesignTimeCreatable=True}"
        
        Title="Fantasy Name Generator" Height="450" Width="800"
        MinHeight="300" MinWidth="400">
    <Window.Resources>
        <Converters:NegateBoolConverter x:Key="NegateBoolConverter"/>
        <Converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="CommandBinding_OnClose"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu Height="20" IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="{x:Static res:Localization.FileLabel}">
                <MenuItem Header="{x:Static res:Localization.GenerateButton}" Command="{Binding GenerateNameCommand}"/>
                <!--<MenuItem Header="Edit" Click="OnEdit_Click"/>-->
                <Separator/>
                <MenuItem Command="Close"/>
            </MenuItem>
        </Menu>
        <Expander Header="{x:Static res:Localization.AdvancedLabel}" ExpandDirection="Left" DockPanel.Dock="Right">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}">
                        <TextBlock.LayoutTransform>
                            <TransformGroup>
                                <RotateTransform Angle="90"/>
                            </TransformGroup>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <StackPanel Width="250">
                <GroupBox Header="{x:Static res:Localization.NameGenerationLabel}">
                    <StackPanel>
                        <TextBlock Text="{x:Static res:Localization.SequenceSizeLabel}"/>
                        <Slider Minimum="1" Maximum="10" IsSnapToTickEnabled="True" TickPlacement="TopLeft"
                                AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                                Value="{Binding SequenceSize}"/>
                        <TextBlock Text="{x:Static res:Localization.LengthModifierLabel}"/>
                        <Slider Minimum="0.5" Maximum="2" IsSnapToTickEnabled="True" TickPlacement="TopLeft"
                                AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="2" TickFrequency="0.25"
                                Value="{Binding LengthModifier}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Expander>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <ComboBox Margin="10,10,10,0"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource NegateBoolConverter}}"
                          ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                          DisplayMemberPath="Name"/>
                <ComboBox Margin="10,5,10,0"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource NegateBoolConverter}}"
                          ItemsSource="{Binding Cultures}" SelectedValue="{Binding SelectedCulture, Mode=TwoWay}"
                          DisplayMemberPath="Name"/>
                <GroupBox Header="{x:Static res:Localization.OptionsLabel}" Margin="10,5,10,0">
                    <StackPanel>
                        <RadioButton Content="{x:Static res:Localization.MaleLabel}" HorizontalAlignment="Left" Height="16"
                                     IsChecked="{Binding Gender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:Gender.Male}}"/>
                        <RadioButton Content="{x:Static res:Localization.FemaleLabel}" HorizontalAlignment="Left" Height="16"
                                     IsChecked="{Binding Gender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:Gender.Female}}"/>
                    </StackPanel>
                </GroupBox>
                <TextBlock Margin="10,10,10,0"
                           TextWrapping="Wrap" Text="{Binding Metadata.Description}"/>
            </StackPanel>
            <Button Content="{x:Static res:Localization.GenerateButton}" Margin="10,0,10,10" Height="20" VerticalAlignment="Bottom"
                    Command="{Binding GenerateNameCommand}"/>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
            <ListBox Grid.Column="2" ItemsSource="{Binding GeneratedNames}">
                <ListBox.CommandBindings>
                    <CommandBinding Command="Save" Executed="CommandBinding_OnSave" CanExecute="CommandBinding_OnCanSave"/>
                    <CommandBinding Command="Copy" Executed="CommandBinding_OnCopy" CanExecute="CommandBinding_OnCanCopy" />
                </ListBox.CommandBindings>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FullName}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="Save" Header="{x:Static res:Localization.SaveAllLabel}"/>
                        <MenuItem Command="Copy"/>
                        <Separator/>
                        <MenuItem Command="{Binding ClearNamesCommand}" Header="{x:Static res:Localization.ClearLabel}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>
